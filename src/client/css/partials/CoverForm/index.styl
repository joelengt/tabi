.CoverForm
    // background blue
    text-align center
    color white
    // height 50vh
    padding-top 13%
    background-image url('../images/cover-slider/3.jpg')
    background-size cover
    background-repeat no-repeat
    height 75vh
    
    &__title
        display inline-block
        vertical-align middle
        // background orange
        width 46%
        text-align left
        
        h2
            font-size 2.5rem
            text-shadow 2px 2px rgba(0, 0, 0, 0.11)
        
        p 
            font-size 1.2rem
            padding-top: .5rem;
            
    &__form
        display inline-block
        vertical-align middle
        background rgba(98, 100, 106, 0.38)
        border-radius 5px
        width 40%
        text-align left
        padding 33px
        
        &--input
            display block
            padding-bottom 1.1rem
            width 100%
            // overflow hidden
            
            .item
                display inline-block
                width 33%
                position: relative
                
                label
                    display block
                    padding-bottom .5rem
                    
                input
                    display block
                    padding .7rem .8rem
                    font-size .8rem
                    width 70%
                    border 0
                    border-radius 5px
                    
                
                select
                    width 85%
                    padding .7rem .8rem
                    font-size .8rem
                    height 33px
                    border 5px
                
                .iconToDate 
                    position: absolute;
                    top: 30px;
                    right: 33px;
                    width: 14%;
                    
                    img 
                        max-width: 100%;
                        width: 100%;
                        
            // .input__margin
            //     margin-right 2rem
                
            .input__email
                width 66%
                
                #email
                    width 85%

            .btnCotizar
                width 28%
                
                button
                    padding 1rem 0.5rem
                    width 100%
                    border 0
                    color white
                    border-radius 5px
                    background blue_logo
                    font-size 1rem
                    text-transform uppercase
                    text-align center
                    cursor pointer

                
                    