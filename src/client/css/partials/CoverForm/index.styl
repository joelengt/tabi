.CoverForm
    // background blue
    text-align center
    color white
    // height 50vh
    padding-top 13%
    background-image url('../images/cover-slider/2--.jpg')
    background blue_logo
    background-size cover
    background-repeat no-repeat
    height 75vh
    
    &__title
        display inline-block
        vertical-align middle
        // background orange
        width 46%
        text-align left
        height: 36%;
        
        h2
            font-size 2.5rem
            text-shadow 2px 2px rgba(0, 0, 0, 0.11)
            font-family 'Montserrat-SemiBold', 'Arial', sans-serif;
        
        p 
            font-size 1.2rem
            padding-top: .5rem;
            
        &--circles
            padding-top: 8rem;
            
            span
                color: white;
                width: 12px;
                height: 12px;
                display: inline-block;
                background: transparent;
                text-align: center;
                border-radius: 50%;
                border 1.5px solid white;
                margin-right .5rem;
                cursor: pointer;
                
                article
                    background: transparent;
                    display: block;
                    height: 10px;
                    width: 10px;
                    border-radius: 50%;
                    margin: 0 auto;
                    margin-top: 1.2px;
        
    &__form
        display inline-block
        vertical-align middle
        background rgba(255, 255, 255, 0.12);
        border-radius 5px
        width 40%
        text-align left
        padding 33px
        
        &--input
            display block
            padding-bottom 1.1rem
            width 100%
            // overflow hidden
            
            .item
                display inline-block
                width 33%
                position: relative
                
                label
                    display block
                    padding-bottom .5rem
                    
                input
                    // display block
                    padding .7rem .8rem
                    font-size .8rem
                    width 70%
                    border 0
                    border-radius 5px
                    
                .counter
                    position: relative
                    
                    .counter__left
                        display inline-block
                        background blue_logo
                        height 38px
                        width 20px
                        border-top-left-radius 5px
                        border-bottom-left-radius 5px
                        text-align center
                        position: absolute
                        left 0
                        
                        p 
                            padding-top .7rem
                        
                    .counter__right
                        display inline-block
                        background blue_logo
                        height 38px
                        width 20px
                        border-top-right-radius 5px
                        border-bottom-right-radius 5px
                        text-align center
                        position: absolute
                        right 24px
                            
                        p 
                            padding-top .7rem
                    
                    .ws-number
                        text-align center

                select
                    width 85%
                    padding .7rem .8rem
                    font-size .8rem
                    height 38px
                    border 5px
                
                .iconToDate 
                    position: absolute;
                    top: 30px;
                    right: 33px;
                    width: 14%;
                    
                    img 
                        max-width: 100%;
                        width: 100%;
                        
            // .input__margin
            //     margin-right 2rem
                
            .input__email
                width 66%
                
                #email
                    width 85%

            .btnCotizar
                width 28%
                
                button
                    padding 1rem 0.5rem
                    width 100%
                    border 0
                    color white
                    border-radius 5px
                    background blue_logo
                    font-size 1rem
                    text-transform uppercase
                    text-align center
                    cursor pointer

                
                    