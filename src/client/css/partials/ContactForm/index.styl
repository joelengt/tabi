.ContactForm
    // background salmon
    color white
    text-align center
    height 100vh
    background-image url('../images/escribenos/Escribenos--.jpg')
    background-size cover
    background-repeat no-repeat
    color white
    &__box
        // height 100vh
        display: -ms-flexbox;
        display: flex;
        -ms-flex-pack: center;
        justify-content: center;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 9rem;

    &__text
        display inline-block
        width 40%
        text-align left
        vertical-align middle
        height: 250px;
        
        h2
            font-size 3.5rem
            font-family 'Montserrat-SemiBold', 'Arial', sans-serif
        p
            font-size 1.5rem
            padding-top: .5rem;
        
        .email
            padding-right: 1rem;
    
    &__form
        display inline-block
        width 35%
        vertical-align middle
            
        &--input
            width 80%
            margin 0 auto
            padding-bottom 1rem
            
            input, textarea
                display block
                width 100%
                padding .7rem
                border 0
                border-radius 10px
                font-size 1rem
                font-family: 'Montserrat-Light', 'Arial', sans-serif;
                
            .btnFormContactSend
                display block
                width 70%
                background gold_yellow
                color white
                padding 1rem
                border-radius 10px
                cursor pointer
                
                &:hover
                    background blue_logo
                
        .to__right
            float right
            width 40%
