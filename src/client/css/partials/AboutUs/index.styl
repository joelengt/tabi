
.AboutUs
    // background salmon
    height 100vh
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: center;
    justify-content: center;
    -ms-flex-align: center;
    align-items: center;
    background-image url('../images/aboutUs/office-desk-background-2.jpg')
    background-size cover
    background-repeat no-repeat
    color white
    

    &__bottom
        display block
        margin 0 auto
        width 100%
        text-align center
        
        &--text
            display inline-block
            width 40%
            vertical-align middle
            text-align left
            
            h2
                font-size 3.5rem
                font-family 'Montserrat-SemiBold', 'Arial', sans-serif
            p 
                font-size 1.3rem
                padding-top: .5rem;


        &--icon
            display inline-block
            width 45%
            vertical-align middle
            text-align right
            overflow hidden
            
            
            .item
                display block
                width 80%
                float right
                text-align right
                padding-bottom 1.5rem

                .image
                    width 20%
                    display inline-block
                    vertical-align middle
                    
                    img
                        max-width 100%

                .text
                    width 60%
                    display inline-block
                    vertical-align middle
                    text-align left
                    
                    
                    h3
                        font-size 1.5rem
                        font-family: 'Montserrat-Bold', 'Arial', sans-serif;
                        
                    p 
                        font-size 1.1rem
                        padding-top: .5rem;
                        
            .item-left
                float left