
.AboutUs
    // background salmon
    height 100vh
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: center;
    justify-content: center;
    -ms-flex-align: center;
    align-items: center;
    background-image url('../images/AboutUs/office-desk-background-2.jpg')
    background-size cover
    background-repeat no-repeat
    color white
    

    &__bottom
        display block
        margin 0 auto
        width 100%
        text-align center
        
        &--text
            display inline-block
            width 40%
            vertical-align middle
            text-align left
            
            h1
                font-size 3.5rem
            p 
                font-size 1.3rem 


        &--icon
            display inline-block
            width 45%
            vertical-align middle
            text-align right
            margin-left 3rem
            overflow hidden
            
            
            .item
                display block
                width 75%
                float right
                text-align left

                .image
                    width 20%
                    display inline-block
                    vertical-align middle
                    
                    img
                        max-width 100%

                .text
                    width 60%
                    display inline-block
                    vertical-align middle
                    
                    
                    h3
                        font-size 1.5rem
            .item-left
                float left