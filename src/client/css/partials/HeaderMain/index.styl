

.HeaderMain
    // background black
    overflow hidden
    padding 15px 25px
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 2;
    
    &__LogoMain
        // background blue
        display inline-block
        vertical-align middle
        
        &__box
            width 170px
            
            img
                max-width 100%   
        
    &__NavMain
        // background red
        display inline-block
        vertical-align middle
        float right
        
        &__Container
            
            &--item
                display inline-block
                margin-left 10px
                
                figure
                    width 20px
                    
                    img
                        max-width 100%
            
            ul
                display inline-block
                
                li
                    display inline-block
                    margin-left 2rem
                    
                    span,a
                        font-size 1.2rem
                        color white
                        text-decoration none
                        padding 1rem 0
                        width 100%
                        display block
                        margin 0 auto
                        text-align center
                        border-bottom 5px solid transparent
                        cursor pointer
                        
                        &:hover
                            border-bottom 5px solid white

