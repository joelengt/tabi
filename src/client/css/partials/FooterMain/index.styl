
.FooterMain
    background #3b556e
    overflow hidden
    color white
    padding 20px 50px
    
    p, a
        font-size .8rem
    
    &__right
        display inline-block
        vertical-align middle
        float left
        
        &--logo
            padding-bottom .5rem
            figure
                width 130px
                
                img
                    max-width 100%
                    
        &--redes-sociales
            padding-bottom .5rem
            
            &--item
                display inline-block
                
                figure
                    width 20px
                    margin-right .5rem
                    
                    img
                        max-width 100%

    &__left
        display inline-block
        vertical-align middle
        float right
        
        &--icons
            padding-bottom .5rem
            
            figure
                display inline-block
                vertical-align middle
                width 80px

                img
                    max-width 100%
        
        &--email
            padding-bottom .5rem
            
            figure
                display inline-block
                width 20px
                img
                    max-width 100%
            .text
                width 70%
                display inline-block
                margin-left 10px
        
        &--text
            span
                display block
                padding-bottom .5rem
                
            a 
                color white
                