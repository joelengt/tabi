
.FooterMain
    // background #3b556e
    overflow hidden
    color white
    padding 0 50px
    padding-top: 60px;
    // border-top 1px solid white
    
    p, a
        font-size .8rem
    
    &__right
        display inline-block
        vertical-align middle
        float left
        text-align left
        
        &--logo
            padding-bottom .5rem
            figure
                width 130px
                
                img
                    max-width 100%
                    
        &--redes-sociales
            padding-bottom .5rem
            
            &--item
                display inline-block
                
                figure
                    width 20px
                    margin-right .5rem
                    
                    img
                        max-width 100%

    &__left
        display inline-block
        vertical-align middle
        float right
        text-align right
        
        &--icons
            padding-bottom .5rem
            
            figure
                display inline-block
                vertical-align middle
                width 80px

                img
                    max-width 100%
        
        &--email
            padding-bottom .5rem
            
            figure
                display inline-block
                width 20px
                img
                    max-width 100%
            .text
                width 70%
                display inline-block
                margin-left 10px
                
                .email
                    padding-right 1.3rem
        
        &--text
            span
                display block
                padding-bottom .5rem
                
            a 
                color white
                
@media screen and (max-width 767px)
    .FooterMain
        padding-top 30px
        &__right, &__left
            margin-bottom 1em
            float inherit
            text-align center
        &__right--logo
            figure
                margin 0 auto