

.PricingElements
    padding-top 5rem
    text-align center
    
    &__title
            
        text-align center
        padding-top 3rem
        padding-bottom 3rem
        
        h2
            font-size 2rem
    &__box
        height 60vh
        display: -ms-flexbox;
        display: flex;
        -ms-flex-pack: center;
        justify-content: center;
        -ms-flex-align: center;
        align-items: center;

    &__form
        display: inline-block
        width 40%
        
    .content-form
        width 100%
        
    .color
        background #e6e6e6

    &__list
        display: inline-block
        // background orange
        width 50%
        height 400px
        vertical-align top
        margin-left 100px
        overflow scroll
        
        article
            background #e6e6e6
            margin 10px auto
            border-radius 10px
            padding 1.5rem 0
            
            .box__left
                display inline-block
                width 50%
                text-align center
                vertical-align top
                padding 1rem
                
                .content
                    text-align left
                    margin 0 auto
                    
                    h2
                        font-size 1.5rem
                        
                    button 
                        display block
                        color blue_logo
                        border none
                        background white
                        border-radius 10px
                        padding 1rem
                        margin-top 1rem
                        cursor pointer
                        
                    
            .box__right
                display inline-block
                width 35%
                vertical-align middle
                padding-top .5rem
                text-align left
                border-left: 1px solid white;
                padding-left: 1rem;
                
                &--price 
                    background #46d0e2
                    border-radius 10px
                    color white
                    padding: 1rem;
                    text-align: center;
                    margin-bottom 1rem
                        
                    span
                        text-align center
                            
                        p 
                            text-align left
                            font-size .9rem
                            
                            span
                                font-weight bold
                                font-size 1.5rem
                    
                    .price-top
                        p
                            text-align left
                            display inline-block
                            width 50%
                            vertical-align top

                h2
                    padding-bottom .5rem

                p, strong
                    display block
                    margin 0 auto
                    padding-bottom .5rem
                    
                button
                    width 100%
                    background: blue_logo
                    border: none
                    color white
                    display block
                    padding .8rem 1.5rem
                    border-radius 10px
                    cursor pointer
                    font-size 1rem
                    font-weight bold



@media (max-width: 900px)

    .PricingElements
        padding-top 5rem
        text-align center
       
        &__box
            display block;
            padding 20px;
            
        &__form
            display block
            width 100%;
        
        &__list
            display block
            width 100%;
            margin-left: 0;
            overflow: none;
    
    #ModalBoxContent
        width: 100% !important;
        padding: 0 !important;
            
            
